<div class='container main-margin'>
  <div class='row justify-content-evenly'>
    <form
      id='form-recipe'
      class='mt-4'
      action='/upload'
      method='POST'
      enctype='multipart/form-data'
    >
      <div class='form-group'>
        <label for='title'>Title</label>
        <input class='form-input' type='textArea' name='title' placeholder='' />
      </div>

      <div class='form-group'>
        <label for='email'>Description</label>
        <input
          class='form-input'
          type='textArea'
          name='description'
          placeholder=''
        />
      </div>

      <div class='form-group'>
        <label for='password'>Ingredients</label>
        <textarea
          id='textarea-ingredients'
          name='ingredients'
          class='form-input'
          rows='10'
          cols='80'
        ></textarea>

      </div>
      <div class='form-group'>
        <label for='password'>Instructions</label>
        <textarea
          id='textarea-instructions'
          name='instructions'
          class='form-input'
          rows='10'
          cols='80'
        ></textarea>
      </div>
      <div class='form-group'>
        <div class='preview-images col-12 col-md-6'></div>
        <input
          type='file'
          name='file'
          id='input-files'
          class='form-control-file border'
        />
      </div>
      <input
        type='submit'
        name='submitInfo'
        value='Submit'
        class='btn btn-primary rounded-pill px-4 py-1'
      />
    </form>
  </div>
</div>
